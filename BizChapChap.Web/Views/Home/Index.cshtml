<!DOCTYPE html>
<html  ng-app="bizChapChap">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body ng-cloak ng-controller="rootCtrl">
    <!-- Fixed navbar -->
    <nav class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="#">BizChapChap</a>
            </div>
            <div id="navbar" class="navbar-collapse collapse">
                <ul id="pright" class="nav navbar-nav pull-right">
                    <li><a href="#">Login</a></li>
                    <li><a href="#">Signup</a></li>
                    <li>
                        <button id="button_post_add" type="submit" class="btn btn-default">POST FREE AD</button>
                    </li>
                </ul>
            </div><!--/.nav-collapse -->
        </div>
    </nav>

    <div ng-show="false">Logged in as {{loggedUser.username}}</div>
    <div class="container" ng-view>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/angularjs")
    @Scripts.Render("~/bundles/angularcss")
    @Scripts.Render("~/bundles/spa")

</body>
</html>
